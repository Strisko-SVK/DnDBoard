# DnD Board Backend Environment Variables
# Copy this file to .env and fill in your values

# ============================================================
# CRITICAL - Required for Production
# ============================================================

# Persistence Mode: Set to "prisma" for production (default is in-memory)
PERSISTENCE=prisma

# Database URL: Use PostgreSQL for production
# SQLite for dev: file:./prisma/dev.db
# PostgreSQL: postgresql://user:password@host:5432/database
DATABASE_URL=file:./prisma/dev.db

# JWT Secret: MUST be set to a strong random value in production
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=dev-secret-change

# ============================================================
# Server Configuration
# ============================================================

# Port to run the backend server
PORT=4000

# Node environment (development, production)
NODE_ENV=development

# ============================================================
# Admin Account (Initial Setup)
# ============================================================

# Default admin credentials (change in production!)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# ============================================================
# Image Upload & Storage (Optional for MVP)
# ============================================================

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-here
AWS_SECRET_ACCESS_KEY=your-secret-key-here
S3_BUCKET=dndboard-uploads

# CDN URL for serving images
CDN_URL=https://cdn.yourdomain.com

# ============================================================
# Redis (Optional - for multi-server presence)
# ============================================================

# Redis URL for presence tracking across multiple servers
# REDIS_URL=redis://localhost:6379

# ============================================================
# Monitoring & Analytics (Optional)
# ============================================================

# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn

# ============================================================
# Production Checklist
# ============================================================
# Before deploying to production, ensure:
# ✅ PERSISTENCE=prisma
# ✅ DATABASE_URL points to PostgreSQL (not SQLite)
# ✅ JWT_SECRET is a strong random value (32+ chars)
# ✅ ADMIN_PASSWORD is changed from default
# ✅ NODE_ENV=production
# ✅ AWS credentials set if using image uploads
# ✅ CDN configured for image delivery

